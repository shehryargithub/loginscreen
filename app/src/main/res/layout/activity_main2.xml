<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     tools:context=".MainActivity">


<ImageView
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/logoImg"
    android:src="@drawable/skin"
    />

<TextView
    android:id="@+id/heading"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/logoImg"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    android:textAlignment="center"
    android:text="SIGN IN"
    android:textColor="@color/black"
    android:textSize="25sp"
    android:textStyle="bold" />



<EditText
    android:id="@+id/email"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/heading"
    android:layout_marginStart="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    android:drawableLeft="@drawable/ic_baseline_attach_email_24"
    android:drawablePadding="15dp"
    android:hint="Email" />


<EditText
    android:id="@+id/password"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/email"
    android:layout_marginStart="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    android:drawableLeft="@drawable/ic_baseline_lock_open_24"
    android:hint="Password"
    />




<TextView
    android:id="@+id/alreadyHaveAccount"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/password"
    android:layout_marginStart="20dp"

    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="2dp"

    android:text="New User?"
    android:textColor="@color/black"
    android:textSize="13sp" />


<TextView
    android:id="@+id/signup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/alreadyHaveAccount"
    android:layout_marginStart="20dp"
    android:layout_marginTop="1dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    android:text="SIGN UP"
    android:textColor="@color/black"
    android:textSize="18sp"
    android:textStyle="bold" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/singinBtn"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/signup"
        android:text="SIGN IN"

        android:textAlignment="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="OR SIGN IN WITH"
        android:id="@+id/newtext"
        android:layout_below="@id/singinBtn"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"/>

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/fblogo"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="100dp"
        android:id="@+id/fb"
        android:layout_below="@id/singinBtn"
       />
    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/twitterlogo"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="100dp"
        android:id="@+id/twitter"
        android:layout_below="@id/singinBtn"
        />
    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/googlelogo1"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="100dp"
        android:id="@+id/google"
        android:layout_below="@id/singinBtn"
        />



</RelativeLayout>